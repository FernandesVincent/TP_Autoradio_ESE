{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build ELF",
      "type": "shell",
      "command": "make -j",
      "group": { "kind": "build", "isDefault": true }
    },
    {
      "label": "Generate BIN",
      "type": "shell",
      "command": "arm-none-eabi-objcopy -O binary build/Debug/AutoRadio.elf build/Debug/AutoRadio.bin",
      "dependsOn": "Build ELF"
    },
    {
      "label": "Flash STM32",
      "type": "shell",
      "command": "st-flash write build/Debug/AutoRadio.bin 0x08000000",
      "dependsOn": "Generate BIN"
    }
  ]
}
